{
  "name": "adb-helper",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.esm.js",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "doc-generate-readme": "documentation build src/**/*.ts --format md --output README.md",
    "generate-readme": "npx jsdoc -c jsdoc.json",
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "test": "jest"
  },
  "keywords": [
    "adb",
    "android",
    "device control",
    "adb-helper"
  ],
  "author": "Abdoulaye SIDIBE",
  "license": "ISC",
  "description": "A library for interacting with Android devices via ADB.",
  "dependencies": {
    "@types/node": "^22.9.0",
    "child_process": "^1.0.2",
    "express": "^4.21.1",
    "fast-xml-parser": "^4.5.0",
    "url": "^0.11.4",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/xml2js": "^0.4.14",
    "documentation": "^14.0.3",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.4",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/adb-helper.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/adb-helper/issues"
  },
  "homepage": "https://github.com/yourusername/adb-helper#readme"
