{
  "compilerOptions": {
    "target": "es2016", 
    "module": "es2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "declarationDir": "./dist/types"
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["node_modules"]
}
